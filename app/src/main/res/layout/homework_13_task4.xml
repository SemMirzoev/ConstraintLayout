<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#9C27B0"
    android:padding="40dp">

    <View
        android:id="@+id/firstview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#2B1A4A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/secondview"
        app:layout_constraintBottom_toTopOf="@+id/thirdView"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintVertical_weight="1"
        />

    <View
        android:id="@+id/secondview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#2B1A4A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/firstview"
        app:layout_constraintBottom_toTopOf="@+id/thirdView"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintVertical_weight="1"
        />

    <View
        android:id="@+id/thirdView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#2B1A4A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstview"
        android:layout_marginTop="20dp"
        app:layout_constraintVertical_weight="2"
        />



</androidx.constraintlayout.widget.ConstraintLayout>